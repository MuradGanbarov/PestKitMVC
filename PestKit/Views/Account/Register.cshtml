@using PestKit.Utilites.Enums;
@using PestKit.ViewModels;

@model RegisterVM

<!-- Register Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-4 offset-4">
                <form method="post">

                    <div class="mb-3">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Surname">Surname</label>
                        <input asp-for="Surname" placeholder="Surname">
                        <span class="text-danger" asp-validation-for="Surname"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Username">Username</label>
                        <input asp-for="Username" placeholder="Username">
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email">Email</label>
                        <input type="email" asp-for="Email" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" placeholder="Password">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" placeholder="ConfirmPasswor">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-control">
                            <select>
                                <option disabled selected>Choose Gender</option>
                                @foreach (var gender in Enum.GetValues(typeof(Genders)))
                                {
                                    <option type="@gender" value="@gender">@gender</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-warning w-100">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Register End -->
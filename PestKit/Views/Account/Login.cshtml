@using PestKit.ViewModels;
@model LoginVM



<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <form method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-4 offset-4">

                <div class="mb-3">
                    <label asp-for="UsernameOrEmail">User or Email</label>
                    <input asp-for="UsernameOrEmail" placeholder="Username Or Email">
                    <span asp-validation-for="UsernameOrEmail"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IsRemembered">Remember Me</label>
                    <input asp-for="IsRemembered"/>
                </div>
                <div class="mb-3">
                        <button class="btn btn-warning w-100">Login</button>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
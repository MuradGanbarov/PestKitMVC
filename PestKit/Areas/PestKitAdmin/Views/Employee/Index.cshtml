@using PestKit.Utilites.Enums;
﻿
@model List<Employee>

@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Employees Table</h4>
                <a asp-controller="employee" asp-action="create" class="btn btn-success">Create New Project</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Middle Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>
                                    Photo
                                </th>
                                <th>
                                    Alternative
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Employee employee in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @employee.Name
                                    </td>
                                    <td>
                                        @employee.MiddleName
                                   </td>
                                   <td>
                                        @employee.MiddleName
                                   </td>
                                   <td>
                                       @employee.LastName
                                   </td>
                                    <td>
                                        @employee.ImageURL
                                    </td>
                                    <td>
                                        @employee.Facebook
                                    </td>
                                    @employee.Instagram
                                    <td>
                                    </td>
                                    @employee.LinkedIn
                                    <td>
                                        @employee.X
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-controller="employee" asp-route-id="@employee.Id" class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                        @if (User.IsInRole(UserRoles.Admin.ToString()))
                                        {
                                            <a asp-action="delete" asp-controller="employee" asp-route-id="@employee.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        }
                                        <a asp-action="detail" asp-controller="employee" asp-route-id="@employee.Id" class="btn btn-success btn-info"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                    <td>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
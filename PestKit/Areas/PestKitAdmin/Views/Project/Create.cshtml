@using PestKit.Areas.PestKitAdmin.ViewModels;


@model CreateProjectVM
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create New Project</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name"/>
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MainPhoto">Main Image</label>
                        <input asp-for="MainPhoto" class="form-control" accept="image/*"/>
                        <span class="text-danger" asp-validation-for="MainPhoto"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SecondaryPhoto">Additional Images</label>
                        <input asp-for="SecondaryPhoto" class="form-control"/>
                        <span class="text-danger" asp-validation-for="SecondaryPhoto" accept="image/*"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="index" asp-controller="project" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

